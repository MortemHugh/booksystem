//- Rooms SEction
// 1. Standard Suite

section.section-padding
  .container
    .row.mx-5
      each h in allRoomTypeArray
        .col-md-6.mt-4
          .card.h-100
            if h.roomimage
              img.card-img-top.img-fluid(src=`${h.roomimage}` alt='Room Type Image')
            else 
              img.card-img-top.img-fluid(src='images/sa/placeholder_hotel.jpg' alt='Room Type Image')
            .card-body
              .text-center
                h4.roomtype-name.mb-4.room-titletext
                  each word in h.roomtype.split(' ')
                      span #{word.charAt(0)}
                      | #{word.slice(1)}
                      | &nbsp;
              if h.description
                h6.roomtype-description.mb-3.text-center                  
                  span #{h.description}
              .d-flex.justify-content-between    
                if h.price, h.capacity      
                  p.card-text
                    | Price: 
                    span #{h.price}
                  p.card-text
                    | Capacity: 
                    span #{h.capacity}
                  p.card-text 
                    |Per Hour: 
                    span â‚±#{h.rate_perhour}   
              .m-2
                i.fa-solid.fa-tv.fa-xl(style='color:#2055b1')
                span.ms-1 43&quot; Flat-Screen Television
              .m-2
                i.fa-solid.fa-wifi.fa-xl(style='color:#2055b1')
                span.ms-1 5G Internet Connection
              .m-2
                i.fa-solid.fa-vault.fa-xl(style='color:#2055b1')
                span.ms-1 Safe
              .m-2
                i.fa-solid.fa-bath.fa-xl(style='color:#2055b1')
                span.ms-1 Shower, Sink, Toilet Bowl, Bidet, Waterheater, and Toiletries
              .m-2
                i.fa-solid.fa-couch.fa-xl(style='color:#2055b1')
                span.ms-1 Coffee Table, Clothes Rack, Mirror, Armchairs
              .m-2
                i.fa-solid.fa-bell-concierge.fa-xl(style='color:#2055b1')
                span.ms-1 Room Service   
            .card-footer
              .d-flex.justify-content-center
                a.btn.btn-primary.sa-book-now.me-2(data-typeid=h.typeid href=`/reservation?typeid=${h.typeid}`, role='button') Book Now


