doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/assets/css/index.css')
    link(rel='stylesheet' href='/assets/css/room.css')
    title Index
  // Navigation Bar
  body
    a.logo(href='index.html')
      | Aruga
      span .
    .menuTog(onclick='toggleMenu();')
      ul.navigation
        li
          a.header_active(href='#home_page' onclick='toggleMenu();') Home
        li
          a(href='about.pug' onclick='toggleMenu();') About
        li
          a(href='rooms.pug' onclick='toggleMenu();') Rooms
        li
          a(href='service.pug' onclick='toggleMenu();') Services
        li
